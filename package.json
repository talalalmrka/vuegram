{
  "name": "fadgram-vue",
  "version": "1.0.9",
  "type": "module",
  "description": "Creative UI components for Vue 3 styled with Tailwind CSS & fadgram ui by Fadgram",
  "keywords": [
    "vue",
    "ui",
    "fadgram",
    "fadgram-vue",
    "tailwind4-vue",
    "vue-components"
  ],
  "author": {
    "name": "Talal Almrka",
    "email": "talalminfo@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/talalalmrka/fadgram-vue"
  },
  "homepage": "https://talalalmrka.github.io/fadgram-vue",
  "main": "dist/fadgram-vue.umd.js",
  "module": "dist/fadgram-vue.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "types",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/fadgram-vue.es.js",
      "require": "./dist/fadgram-vue.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "docs:build": "vite build --config vite.docs.config.ts",
    "docs:preview": "vite preview --config vite.docs.config.ts --outDir=docs",
    "docs:deploy": "gh-pages -d docs"
  },
  "dependencies": {
    "@iconify/icons-bi": "^1.2.19",
    "@iconify/tailwind4": "^1.0.6",
    "@morev/vue-transitions": "^3.0.5",
    "@tailwindcss/vite": "^4.1.4",
    "@vueuse/components": "^13.1.0",
    "@vueuse/core": "^13.1.0",
    "fadgram-ui": "^0.4.8",
    "prismjs": "^1.30.0",
    "tailwindcss": "^4.1.4",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@iconify-json/bi": "^1.2.2",
    "@iconify/vue": "^4.3.0",
    "@vitejs/plugin-vue": "^5.2.2",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "~5.7.2",
    "vite": "^6.3.1",
    "vite-plugin-dts": "^4.5.3",
    "vue-tsc": "^2.2.8"
  }
}
